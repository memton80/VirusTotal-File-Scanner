{
  "manifest_version": 2,
  "name": "VirusTotal File Scanner",
  "version": "1.7.1",
  "description": "Scan automatique des fichiers téléchargés via VirusTotal (upload réel). Options pour clé API, notifications et popup détaillé.",
  "permissions": [
    "downloads",
    "notifications",
    "storage",
    "downloads.open",
    "https://www.virustotal.com/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "VT Auto Scanner",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
"browser_specific_settings": {
  "gecko": {
    "id": "{679bb509-5bf5-41e3-9213-652c7a0e14f5}",
    "strict_min_version": "109.0",
    "data_collection_permissions": {
      "required": ["none"],
      "optional": []
    }
  }
}
}
